MacOS
    build GLFW from source:
        # download glfw
        mkdir build
        cd build
        cmake -DBUILD_SHARED_LIBS=1 -DGLFW_VULKAN_STATIC=OFF -DGLFW_BUILD_EXAMPLES=OFF -DGLFW_BUILD_TESTS=OFF -DCMAKE_INSTALL_PREFIX=/opt/local/  -DVULKAN_INCLUDE_DIR=~/Downloads/vulkansdk-macos-1.1.97.0/macOS/include/vulkan ..
        # don't specify -DVULKAN_LIBRARY or GLFW will run that directly instead of searching ghrough DYLD_LIBRARY_PATH
        sudo make install

    Make local copy of libglfw.3.dylib
        mkdir lib
        cp /opt/local/lib/libglfw.3.dylib lib/
        # can't set DYLD_LIBRARY_PATH to /opt/local/lib because then ImageIO framework picks up the wrong libJPEG by finding /opt/local/libjpeg

    run program like so:
        VK_LAYER_PATH=/Users/grantham/Downloads/vulkansdk-macos-1.1.97.0/macOS/etc/vulkan/explicit_layer.d VK_ICD_FILENAMES=/Users/grantham/Downloads/vulkansdk-macos-1.1.97.0//macOS/etc/vulkan/icd.d/MoltenVK_icd.json DYLD_LIBRARY_PATH=/Users/grantham/Downloads/vulkansdk-macos-1.1.97.0//macOS/lib/ ./vulkan_test

    # VK_LOADER_DEBUG=none 
    # DYLD_PRINT_LIBRARIES=1
    # VK_INSTANCE_LAYERS=VK_LAYER_LUNARG_standard_validation
